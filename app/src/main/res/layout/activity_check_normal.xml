<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F6F6F6"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Store.CheckNormalActivity">
    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/button_back_check_normal"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_arrow_left"
            android:padding="8dp"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="체크리스트 (일반 분야)"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/button_check_normal"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_create"
            android:padding="8dp"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
    </RelativeLayout>
    <View
        android:background="#7d7d7d"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/text_title_check_normal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:text="매장 이름"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>
    <View
        android:background="#7d7d7d"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:id="@+id/text_total_score_check_normal"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:text="총점: 100"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:background="#7d7d7d"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/text_score_check_normal"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:text="점수: 0점"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="#7d7d7d"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_check_normal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
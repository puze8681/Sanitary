<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Store.CheckCommonActivity">
    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/button_back_check_common"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_arrow_left"
            android:padding="8dp"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="체크리스트 (공통 분야)"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <View
        android:background="#7d7d7d"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/text_title_check_common"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:text="매장 이름"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>
    <View
        android:background="#7d7d7d"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/view_sround_gray"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="장기간 음식점 운영여부 (1 / 8)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"/>
                <CheckBox
                    android:id="@+id/check_1_1_common"
                    android:text="30년 이상 (2점)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/check_1_2_common"
                    android:text="20 ~ 30년 (1.5점)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/check_1_3_common"
                    android:text="10 ~ 20년 (1점)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/check_1_4_common"
                    android:text="5 ~ 10년 (0.5점)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/view_sround_gray"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="식품관련 및 국가기관 자격증 소지자의 고용여부 (의무업소 해당 없음) (2 / 8)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"/>
                <CheckBox
                    android:id="@+id/check_2_common"
                    android:text="고용 여부 있음 (1점)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/view_sround_gray"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="장기 근속자 근무여부 (3 / 8)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"/>
                <CheckBox
                    android:id="@+id/check_3_1_common"
                    android:text="10년 이상 (1점)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/check_3_2_common"
                    android:text="5년 이상 (0.8점)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/check_3_3_common"
                    android:text="3년 이상 (0.4점)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/view_sround_gray"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="자체 위생관리 기준 운영 여부  (4 / 8)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"/>
                <CheckBox
                    android:id="@+id/check_4_common"
                    android:text="개인위생 (각 1점)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/view_sround_gray"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="자체 위생관리 기준 운영 여부  (5 / 8)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"/>
                <CheckBox
                    android:id="@+id/check_5_common"
                    android:text="객석/객실 ‧ 조리장위생 (1점)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/view_sround_gray"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="메뉴설명이 포함된 외국어 메뉴판 또는 점자 메뉴판 구비여부 (6 / 8)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"/>
                <CheckBox
                    android:id="@+id/check_6_common"
                    android:text="구비 여부 있음 (1점)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/view_sround_gray"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="제공되는 기구의 불에 그을린 흔적 여부 (7 / 8)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"/>
                <CheckBox
                    android:id="@+id/check_7_common"
                    android:text="흔적 있음 (-1점)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/view_sround_gray"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="업소 내 동물출입 허용여부 (8 / 8)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"/>
                <CheckBox
                    android:id="@+id/check_8_common"
                    android:text="허용 (-1점)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/button_check_common"
                android:layout_marginBottom="16dp"
                android:weightSum="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <TextView
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:text="평가완료"
                    android:background="@drawable/view_sround_blue"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
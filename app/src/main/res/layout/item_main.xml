<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<!--    날짜 점포명 주소 연락처-->
    <View
        android:background="#8C7D7D7D"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_date_main"
            android:textSize="14sp"
            android:textColor="#7d7d7d"
            android:text="2020.01.01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_title_main"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:text="롯데자산개발 롯데월드몰점"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_address_main"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:text="서울시 노원구 상계2,3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_phone_main"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:text="010-1111-2222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="#8C7D7D7D"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <LinearLayout
            android:id="@+id/button_result_main"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:text="업소 점검 결과"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="#8C7D7D7D"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/button_check_main"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:text="체크리스트"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#8C7D7D7D"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
</LinearLayout>
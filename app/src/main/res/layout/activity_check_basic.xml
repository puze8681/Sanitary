<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Store.CheckBasicActivity">
    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/button_back_check_basic"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_arrow_left"
            android:padding="8dp"
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="체크리스트 (기본 분야)"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <View
        android:background="#7d7d7d"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/text_title_check_basic"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:text="매장 이름"
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>
    <View
        android:background="#7d7d7d"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_item_check_basic"
            android:text="평가항목 (index / total)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/text_description_check_basic"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@color/colorGrayDark"
            android:textStyle="bold"
            android:text="이곳은 평가 기준이 띄워질 칸입니다."
            android:background="@drawable/view_sround_gray"
            android:gravity="center|left"
            android:minHeight="56dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/button_no_check_basic"
                android:layout_weight="1"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/colorRed"
                android:textStyle="bold"
                android:text="부적합"
                android:background="@drawable/view_sround_red"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/button_yes_check_basic"
                android:layout_weight="1"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlue"
                android:textStyle="bold"
                android:text="적합"
                android:background="@drawable/view_sround_blue"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorGrayDark"
            android:text="기본 분야의 모든 항목을 만족(적합) 하여야\n위생등급 지정 신청이 가능합니다."
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>